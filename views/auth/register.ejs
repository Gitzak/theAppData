<div class="container d-flex flex-column">
    <div class="row vh-100 d-flex justify-content-center">
        <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 d-table h-100">
            <div class="d-table-cell align-middle">
                <div class="text-center mt-4">
                    <h1 class="h2">Get started</h1>
                    <p class="lead">Start creating your account!</p>
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="m-sm-3">
                            <form>
                                <div class="mb-3">
                                    <label class="form-label">Full name</label>
                                    <input class="form-control form-control-lg" type="text" name="name" placeholder="Enter your name" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input class="form-control form-control-lg" type="email" name="email" placeholder="Enter your email" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Password</label>
                                    <input class="form-control form-control-lg" type="password" name="password" placeholder="Enter password" />
                                </div>
                                <div class="d-grid gap-2 mt-3">
                                    <button type="submit" class="btn btn-lg btn-primary">Sign up</button>
                                </div>
                            </form>
                            <hr />
                            <p>Or sign up using:</p>
                            <div class="d-flex justify-content-center gap-2 mt-3">
                                <a href="#" class="btn btn-info btn-lg"><i class="fa-brands fa-google me-1"></i> Google</a>
                                <a href="#" class="btn btn-primary btn-lg"><i class="fa-brands fa-linkedin me-1"></i> Linkedin</a>
                                <a href="#" class="btn btn-dark btn-lg"><i class="fa-brands fa-github me-1"></i> Github</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center mb-3">Already have account? <a href="/auth/login">Log In</a></div>
            </div>
        </div>
    </div>
</div>
